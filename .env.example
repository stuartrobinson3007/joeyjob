# Database
DATABASE_URL=postgresql://user:password@localhost:5432/database_name

# Redis
REDIS_URL=redis://localhost:6379

# Better Auth
BETTER_AUTH_SECRET=your-super-secret-32-char-key-here
BETTER_AUTH_URL=http://localhost:3000

# Superadmin Access
# Password required to access the superadmin sign-in page (server-side only)
SUPERADMIN_ACCESS_PASSWORD=change-this-secure-password

# SimPro OAuth
SIMPRO_CLIENT_ID=your-simpro-client-id
SIMPRO_CLIENT_SECRET=your-simpro-client-secret
# For client-side access (Vite)
VITE_SIMPRO_CLIENT_ID=your-simpro-client-id

# Minuba OAuth (future implementation)
# MINUBA_CLIENT_ID=your-minuba-client-id
# MINUBA_CLIENT_SECRET=your-minuba-client-secret

# Email Service (Resend)
RESEND_API_KEY=your-resend-api-key
EMAIL_FROM=noreply@joeyjob.com


# Environment
NODE_ENV=development

# Railway specific (production only)
# RAILWAY_ENVIRONMENT=production
# PORT=3000

# Storage Configuration
# For local development, use ./storage (relative path)
# For Railway, this will be automatically set to /storage via RAILWAY_VOLUME_MOUNT_PATH
STORAGE_PATH=./storage